{
  "name": "node-playgrounds",
  "version": "0.0.0",
  "description": "An opinionated setup for writing ES2015+ code",
  "author": "Plusb Preco <plusb21@gmail.com>",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "start": "node --require source-map-support/register .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development nodemon --exec 'node --require @babel/register' src/index.js",
    "dev-inspect": "cross-env NODE_ENV=development nodemon --exec 'node --nolazy --inspect-brk --require @babel/register' src/index.js",
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir build src",
    "clean": "rimraf build"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.9",
    "rimraf": "^2.6.3"
  }
}
